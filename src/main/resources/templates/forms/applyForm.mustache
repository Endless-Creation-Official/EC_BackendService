{{>components/header}}

<form class="container" action="/forms/apply" method="post">
    <div class="col-md-6">
        <label class="form-label">이름</label>
        <input type="text" class="form-control" name="name">
    </div>
    <div class="col-md-6">
        <label class="form-label">전화번호</label>
        <input type="text" class="form-control" data-format="ddd-dddd-dddd" name="phoneNumber">
    </div>

    <div class="mb-3">
        <label class="form-floating" for="floatingTextarea">질문 1</label>
        <textarea class="form-control" placeholder="300자 이내로 입력해 주세요" id="floatingTextarea" name="question1"></textarea>
    </div><div class="mb-3">
        <label class="form-floating" for="floatingTextarea">질문 2</label>
        <textarea class="form-control" placeholder="300자 이내로 입력해 주세요" id="floatingTextarea" name="question2"></textarea>
    </div><div class="mb-3">
        <label class="form-floating" for="floatingTextarea">질문 3</label>
        <textarea class="form-control" placeholder="300자 이내로 입력해 주세요" id="floatingTextarea" name="question3"></textarea>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    합격할 시 동아리 활동에 열심히 참여하고 MT에 올 수 있습니다.
                </label>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 mb-3 text-center">
            <button type="submit" class="btn btn-success text-white w-100 px-3">제출하기</button>
        </div>
        <div class="col-md-6 mb-3 text-center">
            <a href="/" class="btn btn-secondary text-white w-100 px-3 text-decoration-none">돌아가기</a>
        </div>
    </div>

</form>

{{>components/footer}}